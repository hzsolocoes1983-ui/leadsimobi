# ============================================
# M13X Leads - Variáveis de Ambiente
# ============================================

# ============================================
# Aplicação Principal
# ============================================
NODE_ENV=production
APP_NAME=M13X Leads
APP_URL=http://localhost:3000
PORT=3000

# ============================================
# Banco de Dados PostgreSQL
# ============================================
POSTGRES_DB=leadsimobi
POSTGRES_USER=leadsimobi_user
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ============================================
# Evolution API
# ============================================
EVOLUTION_API_URL=http://evolution-api:8080
EVOLUTION_API_KEY=CHANGE_THIS_API_KEY
EVOLUTION_API_NAME=EvolutionAPI

# ============================================
# n8n
# ============================================
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=CHANGE_THIS_PASSWORD
N8N_ENCRYPTION_KEY=CHANGE_THIS_ENCRYPTION_KEY

# ============================================
# Autenticação
# ============================================
JWT_SECRET=CHANGE_THIS_JWT_SECRET
JWT_EXPIRES_IN=7d
SESSION_SECRET=CHANGE_THIS_SESSION_SECRET

# ============================================
# Facebook Ads API (Opcional)
# ============================================
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_ACCESS_TOKEN=
FACEBOOK_AD_ACCOUNT_ID=

# ============================================
# Redis (Opcional - para cache)
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# Proxies (Configurar conforme necessário)
# ============================================
# Formato: host:port:user:pass (um por linha ou separado por vírgula)
PROXY_LIST=

# ============================================
# Segurança
# ============================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ENABLED=true

# ============================================
# Logs
# ============================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# ============================================
# Email (Opcional - para notificações)
# ============================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@leadsimobi.com

